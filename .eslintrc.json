{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "rules": {
    "strict": [
      2,
      "never"
    ],
    "babel/generator-star-spacing": 1,
    "babel/object-shorthand": 1,
    "babel/arrow-parens": 1,
    "babel/no-await-in-loop": 1,
    "yield-star-spacing": 2,
    "no-console": 1,
    "no-unused-vars": 1
  },
  "plugins": [
    "babel"
  ]
}
